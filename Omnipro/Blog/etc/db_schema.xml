        <column xsi:type="text" name="content" nullable="false" comment="Contenido"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Fecha de CreaciÃ³n"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>
